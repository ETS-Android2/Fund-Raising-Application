<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@mipmap/backgr"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@mipmap/hand"></ImageView>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_marginTop="150dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:elevation="1000dp"
                app:cardCornerRadius="20dp">


            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </FrameLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.cardview.widget.CardView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bw"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:elevation="1000dp"
        android:layout_marginTop="165dp"
        app:itemTextColor="@color/black"


        app:menu="@menu/login_signup"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="620dp"
        android:text="or sign in with"
        android:textAlignment="center"
        android:textColor="#000000
"
        android:textSize="20dp">

    </TextView>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="660dp"
        android:backgroundTint="#2a5297"
        android:shadowRadius="10"
        android:text="Facebook"

        android:textColor="@color/white">

    </com.facebook.login.widget.LoginButton>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maqsad"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#ffd100"
        android:layout_marginRight="20dp"
        android:id="@+id/maq"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:layout_alignStart="@+id/maq"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:layout_marginTop="40dp"

        android:textColor="#ffd100"></TextView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>
</RelativeLayout>