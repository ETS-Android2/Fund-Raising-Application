<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyFundsActivity"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/backgr">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:id="@+id/back_myfunds"
            android:layout_margin="20dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"></ImageView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/rec_view"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>