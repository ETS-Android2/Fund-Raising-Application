<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FundActivity"
    android:orientation="vertical"
    android:background="@mipmap/backgr"
    android:weightSum="11">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:layout_marginTop="10dp"
        android:id="@+id/back_add"
        ></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Raise Fund"
        android:textAlignment="center"
        android:textSize="30dp"
        ></TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/ic_baseline_photo_camera_24"
        android:scaleType="fitXY"
        android:id="@+id/title_fund"></ImageView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Title"
        android:id="@+id/title_f"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="Description"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="7"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/description"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Target Amount (Rs)"
        android:textColor="@color/black"
        android:textSize="20dp"

       android:inputType="number"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/goal"
        ></EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="Category"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:elevation="500dp"
            android:id="@+id/education_add"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_school_24"></ImageView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:elevation="500dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/medical_add"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_medical_services_24"></ImageView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:elevation="500dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/humanity_add"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/humanity"></ImageView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:elevation="500dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/climate_add"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/climate"></ImageView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:elevation="500dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/other_add"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/other"></ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"></TextView>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/switch_status"></Switch>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:cardCornerRadius="30dp"
            android:backgroundTint="#063970"
            android:layout_margin="5dp"
            android:id="@+id/raise_fund">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Raise Fund"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                ></TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>